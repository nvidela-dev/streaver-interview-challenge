// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id
  name     String
  username String
  email    String

  // Address fields (flattened, optional)
  street  String?
  suite   String?
  city    String?
  zipcode String?
  lat     String?
  lng     String?

  phone   String?
  website String?

  // Company fields (flattened, optional)
  companyName        String?
  companyCatchPhrase String?
  companyBs          String?

  posts Post[]
}

model Post {
  id     Int    @id
  title  String
  body   String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}
